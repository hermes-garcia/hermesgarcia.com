RewriteEngine on

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html

ErrorDocument 400 /var/www/hermesgarcia.com/page-400.html
ErrorDocument 403 /var/www/hermesgarcia.com/page-403.html
ErrorDocument 404 /var/www/hermesgarcia.com/page-404.html
ErrorDocument 500 /var/www/hermesgarcia.com/page-500.html
ErrorDocument 503 /var/www/hermesgarcia.com/page-503.html

Options -Indexes

RewriteCond %{HTTPS} off
RewriteCond %{HTTP:X-Forwarded-SSL} !on
RewriteCond %{HTTP_HOST} ^blog\.hermesgarcia\.com$ [OR]
RewriteCond %{HTTP_HOST} ^www\.blog\.hermesgarcia\.com$
RewriteRule ^/?$ "https\:\/\/blog\.hermesgarcia\.com\/" [R=301,L]